<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.BelgeUploadActivity">

    <Button
            android:text="Galeri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnImage" android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Kamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCamera" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnImage" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPdf" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCamera" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="Belge Seçilmedi"
            android:layout_width="149dp"
            android:layout_height="28dp"
            android:id="@+id/tvFileName" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPdf" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="İptal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIptal" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnUpload" android:layout_marginEnd="8dp"
            android:layout_marginBottom="272dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.674" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFileName" app:layout_constraintVertical_bias="0.396"/>
    <Button
            android:text="Gönder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnUpload" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="96dp"
            android:layout_marginBottom="272dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvFileName"
            app:layout_constraintVertical_bias="0.396"/>
</android.support.constraint.ConstraintLayout>