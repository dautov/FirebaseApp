<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.AyarlarActivity">

    <EditText
            android:layout_width="219dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etKullaniciAdi"
            android:hint="Kullanıcı Adı"
            android:drawableLeft="@drawable/ic_action_user"

            android:singleLine="false"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imgProfil" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etTelefon"
            android:drawableLeft="@drawable/ic_phone"
            android:hint=" Telefon Numarası" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etKullaniciAdi" app:layout_constraintHorizontal_bias="0.61"
            app:layout_constraintEnd_toStartOf="@+id/imgProfil"/>

    <EditText
            android:layout_width="219dp"
            android:layout_height="38dp"
            android:ems="10"
            android:id="@+id/etEmail"
            android:hint="  E - Mail"
            android:drawableLeft="@drawable/ic_mail"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etTelefon" app:layout_constraintHorizontal_bias="0.615"
            android:inputType="textEmailAddress" app:layout_constraintEnd_toStartOf="@+id/imgProfil"/>
    <Button
            android:text="Değişiklikleri Kaydet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDegisiklikler"
            android:textSize="12sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Şifre ve Mail Güncelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSifreMailGuncelle" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/btnDegisiklikler" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintEnd_toStartOf="@+id/btnDegisiklikler"
            android:layout_marginEnd="8dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="363dp"
            android:layout_height="222dp"
            android:id="@+id/SifreMailGuncelleLayout"
            android:visibility="invisible" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/etMailGuncelle" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="140dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:drawableLeft="@drawable/ic_mail" android:hint="Yeni Mail"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etSifreGuncelle"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="140dp"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/etMailGuncelle"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:drawableLeft="@drawable/ic_lock_open"
                android:hint="Yeni Şifre"/>
        <Button
                android:text="Güncelle"
                android:layout_width="93dp"
                android:layout_height="44dp"
                android:id="@+id/btnMailKaydet"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"/>
        <Button
                android:text="Değiştir"
                android:layout_width="92dp"
                android:layout_height="45dp"
                android:id="@+id/btnSifreKaydet"
                app:layout_constraintStart_toEndOf="@+id/etSifreGuncelle"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/btnMailKaydet" app:layout_constraintHorizontal_bias="0.468"/>
    </android.support.constraint.ConstraintLayout>
    <EditText
            android:layout_width="219dp"
            android:layout_height="39dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etSifre"
            android:drawableLeft="@drawable/ic_lock_open" android:hint=" Şifre"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imgProfil" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Şifremi Unuttum"
            android:layout_width="106dp"
            android:layout_height="22dp"
            android:id="@+id/tvSifreResetle"
            app:layout_constraintBottom_toBottomOf="@+id/btnDegisiklikler" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp" app:layout_constraintEnd_toStartOf="@+id/btnDegisiklikler"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="134dp"
            android:layout_height="147dp" tools:srcCompat="@drawable/ic_account_circle"
            android:id="@+id/imgProfil" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnDegisiklikler" app:layout_constraintVertical_bias="0.561"
            app:srcCompat="@drawable/ic_account_circle"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarResim"
            app:layout_constraintTop_toTopOf="@+id/imgProfil" app:layout_constraintEnd_toEndOf="@+id/imgProfil"
            app:layout_constraintStart_toStartOf="@+id/imgProfil"
            app:layout_constraintBottom_toBottomOf="@+id/imgProfil" android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>