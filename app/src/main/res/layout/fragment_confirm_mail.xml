<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".dialog.ConfirmMailFragment">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etConfirmMail" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
            android:hint="E - Mail"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etConfirmPass" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/etConfirmMail" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Şifre"
            app:layout_constraintHorizontal_bias="0.503"/>
    <Button
            android:text="Gönder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSend" app:layout_constraintEnd_toEndOf="@+id/etConfirmPass"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/etConfirmPass"/>
    <Button
            android:text="Çıkış"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnExit" app:layout_constraintEnd_toStartOf="@+id/btnSend" android:layout_marginEnd="8dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/etConfirmPass"
            app:layout_constraintStart_toStartOf="@+id/etConfirmPass" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>