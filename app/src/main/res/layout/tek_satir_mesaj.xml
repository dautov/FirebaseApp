<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="110dp">

    <ImageView
            android:layout_width="54dp"
            android:layout_height="56dp" app:srcCompat="@drawable/ic_action_user"
            android:id="@+id/imgMesajProfil"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tvKullaniciAd"/>
    <TextView
            android:text="yazar"
            android:layout_width="51dp"
            android:layout_height="20dp"
            android:id="@+id/tvKullaniciAd" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tvTarih" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.041" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="tarih"
            android:layout_width="43dp"
            android:layout_height="20dp"
            android:id="@+id/tvTarih" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            app:layout_constraintTop_toTopOf="@+id/tvKullaniciAd" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="mesaj"
            android:layout_width="285dp"
            android:layout_height="31dp"
            android:id="@+id/tvMesaj" app:layout_constraintStart_toEndOf="@+id/imgMesajProfil"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgMesajProfil" app:layout_constraintTop_toTopOf="@+id/imgMesajProfil"
            app:layout_constraintHorizontal_bias="0.172" app:layout_constraintVertical_bias="0.551"/>
</android.support.constraint.ConstraintLayout>