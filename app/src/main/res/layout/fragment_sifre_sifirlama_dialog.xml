<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".dialog.SifreSifirlamaDialogFragment">


    <TextView
            android:text="Şifremi Unuttum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvYazi" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteX="93dp" android:id="@+id/tvMail"
            android:hint="E - Mail" android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/tvYazi"/>
    <Button
            android:text="Gönder"
            android:layout_width="90dp"
            android:layout_height="49dp"
            android:id="@+id/btnGonder"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/tvMail"
            app:layout_constraintEnd_toEndOf="@+id/tvMail" android:layout_marginEnd="16dp"/>
    <Button
            android:text="Iptal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIptal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMail" app:layout_constraintStart_toStartOf="@+id/tvMail"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>