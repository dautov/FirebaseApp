<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="360dp"
                                             android:layout_height="wrap_content" android:layout_marginLeft="50dp">

    <ImageView
            android:layout_width="54dp"
            android:layout_height="56dp" app:srcCompat="@drawable/ic_action_user"
            android:id="@+id/imgMesajProfil2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="yazar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvKullaniciAd2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imgMesajProfil2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <TextView
            android:text="tarih"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:id="@+id/tvTarih2"
            app:layout_constraintTop_toBottomOf="@+id/tvMesaj" app:layout_constraintStart_toStartOf="@+id/tvMesaj"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="mesaj"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="@drawable/rect_text_primary"
            android:id="@+id/tvMesaj"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/imgMesajProfil2"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="@+id/imgMesajProfil2"
            app:layout_constraintTop_toTopOf="@+id/imgMesajProfil2"/>
</android.support.constraint.ConstraintLayout>